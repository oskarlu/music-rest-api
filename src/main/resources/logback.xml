<configuration>

    <conversionRule conversionWord="tid" converterClass="com.oskarlund.musicapi.util.ThreadIdConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [thread-%tid] %highlight(%-5level) - %msg \(%logger{0}:%L\)%n</pattern>
<!--            <pattern>%d{HH:mm:ss.SSS} [thread-%tid] %-5level - %msg \(%logger{0}:%L\)%n</pattern>-->
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="com.oskarlund" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
